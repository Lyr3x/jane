  <div class="container">
    <div class="page-header">
      <h1>Add a Button</h1>
    </div>

    <div class="container col-sm-offset-1 col-sm-10">
      <form class="form-horizontal col-sm-offset-1" id="button" action="save" method="post">
        <div class="form-group">
          <label for="label" class="col-sm-2 control-label">Button Label</label>
          <div class="col-sm-7">
            <input type="text" class="form-control" id="label">
          </div>
        </div>
        <div class="form-group">
          <label for="icon" class="col-sm-2 control-label">Button Icon</label>
          <div class="col-sm-7">
            <input type="text" class="form-control" id="icon" placeholder="off">
          </div>
        </div>
        <div class="form-group">
          <label for="device" class="col-sm-2 control-label">Device</label>
          <div class="col-sm-7">
            <input type="text" class="form-control" id="device">
          </div>
        </div>
        <div class="form-group">
          <label for="action" class="col-sm-2 control-label">Action</label>
          <div class="col-sm-7">
            <input type="text" class="form-control" id="action">
          </div>
        </div>
        <div class='col-sm-offset-2 checkbox'>
          <label>
            <input type='checkbox'> Show button in webinterface
          </label>
        </div>
        <div id="commands">
        </div>
        <button type="button" class="btn btn-success btn-sm col-sm-offset-7" onclick="add_command()">
          Add Command <span class="glyphicon glyphicon-plus"></span>
        </button>
      </form>
      
      <button type="button" class="btn btn-primary btn-lg col-sm-offset-9" onclick="save()">Save</button>
  </div>
  </div>

